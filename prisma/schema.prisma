// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Books {
  isbn  Int @id @default(autoincrement())
  title String
  price Float
  quantity Int
  publisher Publishers? @relation(fields: [publisher_id], references:[id])
  publisher_id Int?
  checkedout CheckedOut[]
}

model Publishers {
  id Int @id @default(autoincrement())
  name String
  year_publication Int?
  books Books[]
}

model Readers {
  id Int @id @default(autoincrement())
  name String
  email String
  password String
  address String
  phone String
}

model CheckedOut {
  id Int @id @default(autoincrement())
  book Books @relation(fields: [book_isbn], references: isbn)
  book_isbn Int
  reader  Readers @relation(fields: [reader_id], references: id)
  reader_id Int
  checkout_date DateTime?
  returned Boolean
  returned_date DateTime?
  duration Int?
}